    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header
      h1 Noom
    main
      div#welcome
        form
          input(placeholder="room name", require, type="text")
          button Enter Room
      div#room
        h3
        ul
        form#name
          input(placeholder="name", require, type="text")
          button Save
        form#msg
          input(placeholder="message", require, type="text")
          button Send

