      h1 Noom
    main
      div#welcome
        form(action="") 
          input(placeholder='room name', require, type='text')
          button Enter room
      div#call
        div#myStream
          video#myFace(autoplay, playsinline, width='400', height='400')
          button#mute Mute
          button#camera Turn Camera Off
          select#cameras
        video#peerStream(autoplay, playsinline, width='400', height='400')

